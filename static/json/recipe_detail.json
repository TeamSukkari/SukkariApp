{
    "type": "bubble",
    "direction": "ltr",
    "hero": {
      "type": "image",
      "url": "{imagePath}",
      "size": "full",
      "aspectRatio": "20:13",
      "aspectMode": "cover",
      "backgroundColor": "#FFFFFFFF",
      "action": {
        "type": "uri",
        "label": "Action",
        "uri": "https://linecorp.com"
      }
    },
    "body": {
      "type": "box",
      "layout": "vertical",
