{
    "type": "bubble",
    "direction": "ltr",
    "hero": {
      "type": "image",
      "url": "{imagePath}",
      "size": "full",
      "aspectRatio": "20:13",
      "aspectMode": "cover",
      "backgroundColor": "#FFFFFFFF",
      "action": {
        "type": "uri",
        "label": "Action",
        "uri": "https://linecorp.com"
      }
    },
    "body": {
      "type": "box",
      "layout": "vertical",
      "spacing": "md",
      "action": {
        "type": "uri",
        "label": "Action",
        "uri": "https://linecorp.com"
      },
      "contents": [
        {
          "type": "spacer"
        },
        {
          "type": "text",
          "text": "{title}",
          "weight": "bold",
          "size": "xl",
          "color": "#6B6B6BFF",
          "contents": []
        },
        {
          "type": "text",
          "text": "{description}",
          "size": "xxs",
          "color": "#909090",
          "wrap": true,
          "contents": []
        },
        {
          "type": "text",
          "text": "合計{totalTime}分",
          "weight": "bold",
          "size": "md",
          "align": "end",
          "contents": []
        }
      ]
    },
    "footer": {
      "type": "box",
      "layout": "vertical",
      "contents": [
        {
          "type": "box",
          "layout": "horizontal",
          "contents": [
            {
              "type": "button",
              "action": {
                "type": "message",
                "label": "詳細を見る",
                "text": "maintenance"
              },
              "color": "#E4BD6EFF",
              "margin": "xxl",
              "height": "sm",
              "style": "primary",
              "gravity": "top"
            }
          ]
        }
      ]
    }
  }